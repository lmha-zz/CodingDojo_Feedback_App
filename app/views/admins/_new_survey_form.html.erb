<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= form_for(@survey, :html => { :class => "form-horizontal" }) do |s| %>
      <div class="form-group">
        <%= s.label :title, "Session Title:", :class => "col-sm-2" %>
        <div class="col-sm-10">
          <%= s.text_field :title, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= s.label :author, "Your Name:", :class => "col-sm-2" %>
        <div class="col-sm-10">
          <%= s.text_field :author, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= s.submit "Create", :class => "btn btn-success pull-right"%>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <p>Surveys expire automatically 30 minutes after creation.</p>
  </div>
</div>