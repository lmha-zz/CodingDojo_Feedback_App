<%= content_for :title do %>
  CodingDojo Feedbacks
<% end %>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <div class="col-sm-12">
        <h1><%= @survey.title %> (<%= @survey.author %>)</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= form_for(@surveyresult, :html => { :class => 'form-horizontal' } ) do |s| %>
          <div class="form-group">
            <%= s.label :name, "Name (optional):", :class => "col-sm-2" %>
            <div class="col-sm-10">
              <%= s.text_field :name, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= s.label :helpful_scale, "How helpful was the session on a scale of 1-10? (1: not helpful at all, 5: neutral, 10: extremeley helpful)", :class => 'col-sm-12' %>
            <table class="col-sm-10 col-sm-offset-1">
              <tbody>
                <tr>
                  <% i = 1 %>
                  <% while i < 11 do %>
                    <% id = "helpful_scale"<<i %>
                    <td><%= s.label "helpful_scale_#{i}", "#{i}" %></td>
                    <% i+=1 %>
                  <% end %>
                </tr>
                <tr>
                  <% j = 1 %>
                  <% while j < 11 do %>
                    <td><%= s.radio_button(:helpful_scale, j) %></td>
                    <% j+=1 %>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="form-group">
            <%= s.label :feedback, "Feedback (optional):", :class => "col-sm-2" %>
            <div class="col-sm-10">
              <%= s.text_area :feedback, :class => "form-control"%>
            </div>
          </div>
          <div class="form-group">
            <%= s.submit "Submit", :class => "btn btn-success pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>